<nav class="topNav py-2">
  <span class="logoForLogin">Account Login</span>
</nav>

<div class="container">
  <div class="row">
    <div class="col col-sm-6 mx-auto">
      <form class="mt-5" method="POST" action="/">
        <div class="form-group form-row mx-auto">
          <label for="email" class="col-sm-2 col-form-label">Email</label>
          <div class="col-sm-8">
            <input type="text" name="email" class="form-control" id="email" placeholder="email@example.com">
          </div>
        </div>
        <div class="form-group form-row mx-auto">
          <label for="password" class="col-sm-2 col-form-label">Password</label>
          <div class="col-sm-8">
            <input type="password" name="password" class="form-control" id="password" placeholder="Password">
          </div>
        </div>
        <div class="form-group form-row my-5">
          <button class="btn btn-primary px-3 py-2" type="submit">Log in</button>
          <div class="px-5" role="alert">
            {{!-- <span class="mr-2"> --}}
            <code class="failureMsg">{{failureMsg}}</code>
            {{!-- </span> --}}
          </div>
        </div>
      </form>
    </div>
  </div>
</div>